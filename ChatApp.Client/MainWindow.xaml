<Window x:Class="ChatApp.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Application 1" HorizontalAlignment="Left" Height="25" Margin="50,10,0,0" VerticalAlignment="Top" Width="676"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="96,65,0,0" TextWrapping="Wrap" Text="Text box messages to send" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="52" Margin="96,228,0,0" TextWrapping="Wrap" Text="Text box for recieved messages" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.228,0.558"/>
        <Button Content="Send" HorizontalAlignment="Left" Height="40" Margin="176,142,0,0" VerticalAlignment="Top" Width="70" Click="Button_Click"/>
    </Grid>
</Window>
